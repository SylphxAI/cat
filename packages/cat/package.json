{
  "name": "@sylphx/cat",
  "version": "0.0.0",
  "description": "The fastest, lightest, most extensible logger for all JavaScript runtimes",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "bun build src/index.ts --outdir dist --target node --format esm --sourcemap=external && tsc --declaration --emitDeclarationOnly --outDir dist",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "keywords": [
    "cat",
    "logger",
    "logging",
    "log",
    "fast",
    "lightweight",
    "performance"
  ],
  "author": "Kyle Zhu",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/SylphxAI/cat",
    "directory": "packages/cat"
  },
  "publishConfig": {
    "access": "public"
  }
}
