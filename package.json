{
	"name": "@sylphx/cat-monorepo",
	"version": "0.2.0",
	"private": true,
	"description": "Monorepo for @sylphx/cat logger ecosystem",
	"type": "module",
	"packageManager": "bun@1.3.2",
	"workspaces": {
		"packages": ["packages/*"],
		"nohoist": ["**"]
	},
	"scripts": {
		"build": "turbo run build",
		"test": "turbo run test",
		"test:watch": "turbo run test:watch",
		"lint": "biome lint .",
		"format": "biome format --write .",
		"check": "biome check .",
		"clean": "turbo run clean && rm -rf node_modules .turbo",
		"changeset": "changeset",
		"version": "changeset version",
		"release": "turbo run build && changeset publish",
		"docs:dev": "vitepress dev docs",
		"docs:build": "vitepress build docs",
		"docs:preview": "vitepress preview docs"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.5",
		"@changesets/cli": "^2.29.7",
		"@types/bun": "latest",
		"@vitest/coverage-v8": "^4.0.9",
		"@vitest/ui": "^4.0.9",
		"mitata": "^1.0.34",
		"turbo": "^2.3.3",
		"typescript": "^5.9.3",
		"vitepress": "^1.6.4",
		"vitest": "^4.0.9",
		"vue": "^3.5.24"
	},
	"author": "Kyle Zhu",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/SylphxAI/cat"
	}
}
